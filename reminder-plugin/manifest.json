{
    "manifest_version": 3,
    "name": "Reminders",
    "description": "Reminders for yourself",
    "version": "1.0",
    "action": {
        "default_popup": "html/create-reminder.html"
    },
    "icons": {
        "16":"img/icon-16.png",
        "32":"img/icon-32.png",
        "48":"img/icon-48.png",
        "128":"img/icon-128.png"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "side_panel": {
        "default_path": "html/view-reminders.html"
    },
    "permissions": [
        "storage", "sidePanel","notifications","alarms", "background"
    ]
}